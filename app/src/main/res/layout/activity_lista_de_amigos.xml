<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listaDeAmigos_ListaDeAmigos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121214"
    tools:context=".Activity_ListaDeAmigos">

    <FrameLayout
        android:id="@+id/frameLayout_ListaDeAmigos"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#202024"
        android:gravity="center"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonAmigo1_ListaDeAmigos"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewListaDeAmigos_ListaDeAmigos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Lista de Amigos"
            android:textColor="#E1E1E6"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/btnvoltar_ListaDeAmigos"
            android:layout_width="36dp"
            android:layout_height="31dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icons"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/textViewExemploIntent_ListaDeAmigos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.042"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.533"/>
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonAmigo1_ListaDeAmigos"
        android:layout_width="380dp"
        android:layout_height="45dp"
        android:background="#202024"
        android:paddingStart="15dp"
        android:text="Arthur de Oliveira"
        android:textAlignment="viewStart"
        android:textColor="#C4C4CC"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonAmigo2_ListaDeAmigos"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout_ListaDeAmigos">

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonAmigo2_ListaDeAmigos"
        android:layout_width="380dp"
        android:layout_height="45dp"
        android:background="#202024"
        android:paddingStart="15dp"
        android:text="Eduarda Cavalheiro"
        android:textAlignment="viewStart"
        android:textColor="#C4C4CC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonAmigo3_ListaDeAmigos"
        app:layout_constraintTop_toBottomOf="@+id/buttonAmigo1_ListaDeAmigos">

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonAmigo3_ListaDeAmigos"
        android:layout_width="380dp"
        android:layout_height="45dp"
        android:background="#202024"
        android:paddingStart="15dp"
        android:text="Amigo 3"
        android:textAlignment="viewStart"
        android:textColor="#C4C4CC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonAmigo4_ListaDeAmigos"
        app:layout_constraintTop_toBottomOf="@+id/buttonAmigo2_ListaDeAmigos">

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonAmigo4_ListaDeAmigos"
        android:layout_width="380dp"
        android:layout_height="45dp"
        android:background="#202024"
        android:paddingStart="15dp"
        android:text="Amigo 4"
        android:textAlignment="viewStart"
        android:textColor="#C4C4CC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonAmigo5_ListaDeAmigos"
        app:layout_constraintTop_toBottomOf="@+id/buttonAmigo3_ListaDeAmigos">

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonAmigo5_ListaDeAmigos"
        android:layout_width="380dp"
        android:layout_height="45dp"
        android:background="#202024"
        android:paddingStart="15dp"
        android:text="Amigo 5"
        android:textAlignment="viewStart"
        android:textColor="#C4C4CC"
        android:layout_marginBottom="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAmigo4_ListaDeAmigos">

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonAdicionarAmigo_ListaDeAmigos"
        android:layout_width="380dp"
        android:layout_height="55dp"
        android:layout_marginTop="90dp"
        android:background="#4C88E3"
        android:text="Adicionar Amigo"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/buttonRemoverAmigo_ListaDeAmigos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAmigo5_ListaDeAmigos">

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonRemoverAmigo_ListaDeAmigos"
        android:layout_width="380dp"
        android:layout_height="55dp"
        android:layout_marginBottom="10dp"
        android:background="#4C88E3"
        android:text="Remover Amigo"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAdicionarAmigo_ListaDeAmigos">

    </androidx.appcompat.widget.AppCompatButton>


</androidx.constraintlayout.widget.ConstraintLayout>